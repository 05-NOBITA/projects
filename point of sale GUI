		justAnImage.setBounds(10, 231, 173, 183);
		contentPane.add(justAnImage);
		
		txt6 = new JTextField();
		txt6.setBounds(324, 399, 234, 20);
		contentPane.add(txt6);
		txt6.setColumns(10);
	}

	public double getGrandtotal() {
		return grandtotal;
	}

	public void setGrandtotal(double grandtotal) {
		this.grandtotal = grandtotal;
	}
}
